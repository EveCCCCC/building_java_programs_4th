public class SlashFigure{
    public static void main(String[] args){
        for(int i = 0; i <= 5; i++){
            for(int j = 1; j <= i * 2; j+=2){
                System.out.print("\\\\");
            }
            for(int k = 1; k <= 22 - 4 * i; k++){
                System.out.print("!");
            }
            for(int l = 1; l <= i * 2; l+=2){
                System.out.print("//");
            }
            System.out.println();
        }
    }
}
